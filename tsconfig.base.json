{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@psu-superapp/api-controllers": ["libs/api/controllers/src/index.ts"],
      "@psu-superapp/api-routes": ["libs/api/routes/src/index.ts"],
      "@psu-superapp/api-services": ["libs/api/services/src/index.ts"],
      "@psu-superapp/api/guards": ["libs/api/guards/src/index.ts"],
      "@psu-superapp/api/utils": ["libs/api/utils/src/index.ts"],
      "@psu-superapp/entities": ["libs/entities/src/index.ts"],
      "@psu-superapp/mobile-components": [
        "libs/mobile/components/src/index.ts"
      ],
      "@psu-superapp/mobile-modules": ["libs/mobile/modules/src/index.ts"],
      "@psu-superapp/mobile-routers": ["libs/mobile/routers/src/index.ts"],
      "@psu-superapp/mobile-services": ["libs/mobile/services/src/index.ts"],
      "@psu-superapp/mobile/components": ["mobile/components/src/index.ts"],
      "@psu-superapp/models": ["libs/prisma/index.ts"],
      "@psu-superapp/web-components": ["libs/web/components/src/index.ts"],
      "@psu-superapp/web-components/server": [
        "libs/web/components/src/server.ts"
      ],
      "@psu-superapp/web-modules": ["libs/web/modules/src/index.ts"],
      "@psu-superapp/web-modules/server": ["libs/web/modules/src/server.ts"],
      "@psu-superapp/web-providers": ["libs/web/providers/src/index.ts"],
      "@psu-superapp/web-providers/server": [
        "libs/web/providers/src/server.ts"
      ],
      "@psu-superapp/web-services": ["libs/web/services/src/index.ts"],
      "@psu-superapp/web-services/server": ["libs/web/services/src/server.ts"],
      "@psu-superapp/web-utils": ["libs/web/utils/src/index.ts"],
      "@psu-superapp/web-utils/server": ["libs/web/utils/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
